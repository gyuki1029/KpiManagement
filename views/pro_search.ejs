        <!-- contents -->
      <main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
          
          <h3 id="section0" class="sub-header">検索</h3>
<h4 class="sub-header">検索条件</h4>
<div class="container">
  <form id="pro_search_form">
    
      <div class="form-group row">
      <label for="code" class="col-sm-3 col-form-label">分類コード</label>
      <div class="col-sm-9"><input name="code" type="text" class="form-control" id="code" placeholder="F0001"></input></div>
      </div>
    
      <div class="form-group row">
      <label for="name_ja" class="col-sm-3 col-form-label">成果物名称（日本語）</label>
      <div class="col-sm-9"><input name="name_ja" type="text" class="form-control" id="input_name_ja" placeholder="売上高増減率"></input></div>
      </div>
    
      <div class="form-group row">
      <label for="name_en" class="col-sm-3 col-form-label">成果物名称（英語）</label>
      <div class="col-sm-9"><input name="name_en" type="text" class="form-control" id="name_en" placeholder="Sales rate of change"></input></div>
      </div>
    
      <div class="form-group row">
      <label for="status" class="col-sm-3 col-form-label">成果物ステータス</label>
      <div class="col-sm-9"><select name="status" class="form-control" id="status"><option>設計中</option><option>運用中</option><option>廃止</option></select></div>
      </div>
    

    <div class="form-group row">
      <div class="offset-sm-10 col-sm-2">
        <button type="button" class="btn btn-primary" id="pro_search_button">search</button>
      </div>
    </div>
  </form>
</div>
<!-- 発言内容の分析結果 -->
<h3 id="section1" class="sub-header">検索結果</h3>

<!--<div class="table-responsive">-->
  <table class="table table-striped">
    <thead class="thead-inverse">
      <tr>
        
          <th>
            分類コード
              </th>
                
          <th>
            成果物名称
              </th>
                
          <th>
            読み方
              </th>
                
          <th>
            成果物ステータス
              </th>
                
          <th>
            業務機能
              </th>
                
          <th>
            管理部署
              </th>
                
      <th></th>
      <th></th>
      </tr>
    </thead>
      
        <tbody id="html_api_response"></tbody>
        <script type="text/x-handlebars-template" id="scr_api_response">
        {{#each product}}
        <tr>
          <td >{{code}}</a></td>
          <td>{{name}}</td>
          <td>{{ruby}}</td>
          <td>{{status}}</td>
          <td>{{bus_func}}</td>
          <td>{{manage_dep}}</td>
          <td>
            <form>
            <input type="hidden" name="code" value={{code}}>
            <button name={{code}} type="button" class="btn btn-info {{code}}_info_button">詳細ページ</button>
            </form>
          </td>
          <td>
            <form>
            <input type="hidden" name="code" value={{code}}>
            <button name={{code}} type="button" class="btn btn-warning {{code}}_update_button">更新ページ</button>
            </form>
          </td>
          {{!--<td>{{background}}</td>
          <td>{{abst_ja}}</td>
          <td>{{abst_en}}</td>
          <td>{{num_unit}}</td>
          <td>{{remarks}}</td>--}}
        </tr>
        {{/each}}
        </script>
  </table>
  <p id="err_analysis" class="text-danger" style="display:none">ERROR: サーバーから分類結果を取得できませんでした</p>
